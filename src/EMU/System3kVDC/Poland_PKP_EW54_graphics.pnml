}

/*
* VEHICLE
*/

//Front
spriteset(spriteset_emu_Poland_PKP_EW54_front_L1, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(1, 1)
}

//Back
spriteset(spriteset_emu_Poland_PKP_EW54_back_L1, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(1, 32)
}

//Front mail
spriteset(spriteset_emu_Poland_PKP_EW54_front_L2, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(179, 1)
}

//Back mail
spriteset(spriteset_emu_Poland_PKP_EW54_back_L2, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(179, 32)
}

//Middle - PAX-L1
spriteset(spriteset_emu_Poland_PKP_EW54_middlepass_L1, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(1, 64)
}

//Middle - PAX-L2 panto
spriteset(spriteset_emu_Poland_PKP_EW54_middlepass_L2, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(179, 64)
}

//Middle - MAIL-L1
spriteset(spriteset_emu_Poland_PKP_EW54_middlemail_L1, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(1, 96)
}

//Middle - MAIL-L2 panto
spriteset(spriteset_emu_Poland_PKP_EW54_middlemail_L2, "gfx/EMU/Poland_PKP_EW54.png") {
	template_2cc_engines_general(179, 96)
}

//Graphics for the head wagon based on cargo class
switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_front_head_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): spriteset_emu_Poland_PKP_EW54_front_L1;
	spriteset_emu_Poland_PKP_EW54_front_L2;
}
switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_back_head_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): spriteset_emu_Poland_PKP_EW54_back_L1;
	spriteset_emu_Poland_PKP_EW54_back_L2;
}

//Dualheaded engines
switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_reversed, var[0xC8]) {
	0xFE: switch_emu_Poland_PKP_EW54_back_head_cargo_selection;
    0xFF: switch_emu_Poland_PKP_EW54_back_head_cargo_selection; 
    switch_emu_Poland_PKP_EW54_front_head_cargo_selection;
}

//Visual effect, for EMU this is done on the part with the pantograph
switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_visual_effect_and_powered, vehicle_type_id) {
	item_mu_wagon_powered: return visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
	return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER); 
}

switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_visual_effect_and_powered_position, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Poland_PKP_EW54_visual_effect_and_powered;
	visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_middlepass_livery, vehicle_type_id) {
	item_mu_wagon_powered: return spriteset_emu_Poland_PKP_EW54_middlepass_L2;
	return spriteset_emu_Poland_PKP_EW54_middlepass_L1;
}

switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_middlemail_livery, vehicle_type_id) {
	item_mu_wagon_powered: return spriteset_emu_Poland_PKP_EW54_middlemail_L2;
	return spriteset_emu_Poland_PKP_EW54_middlemail_L1;
}

//First unit wagon always has a pantograph
switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_middlepass_position, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Poland_PKP_EW54_middlepass_livery;
	spriteset_emu_Poland_PKP_EW54_middlepass_L2;
}

switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_middlemail_position, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Poland_PKP_EW54_middlemail_livery;
	spriteset_emu_Poland_PKP_EW54_middlemail_L2;
}
	
/*
* Cargo capacity
*/

ENGINECAPACITYSWITCH(VEHIDCODE)

WAGONCAPACITYSWITCH(VEHIDCODE)

//Graphics for the unit wagon based on cargo class
switch(FEAT_TRAINS, SELF, switch_emu_Poland_PKP_EW54_cargo_selection, hasbit(cargo_classes,CC_PASSENGERS)){
	1: switch_emu_Poland_PKP_EW54_middlepass_position;
	switch_emu_Poland_PKP_EW54_middlemail_position;
}

//Add defined switches

RUNNINGCOSTENGINESWITCH

RUNNINGCOSTMUWAGONSWITCH

PURCHASETEXTSWITCH


