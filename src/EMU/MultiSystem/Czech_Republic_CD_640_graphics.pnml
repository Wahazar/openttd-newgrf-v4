/*
* VEHICLE
*/

//Front
spriteset(spriteset_emu_Czech_Republic_CD_640_front_pass, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(1, 1)
}

//Back
spriteset(spriteset_emu_Czech_Republic_CD_640_front_mail, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(179, 1)
}

//Front mail
spriteset(spriteset_emu_Czech_Republic_CD_640_back_pass, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(1, 32)
}

//Back mail
spriteset(spriteset_emu_Czech_Republic_CD_640_back_mail, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(179, 32)
}

//Middle - PAX-L1
spriteset(spriteset_emu_Czech_Republic_CD_640_middlepass_L1, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(1, 96)
}

//Middle - PAX-L2 panto
spriteset(spriteset_emu_Czech_Republic_CD_640_middlepass_L2, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(1, 64)
}

//Middle - MAIL-L1
spriteset(spriteset_emu_Czech_Republic_CD_640_middlemail_L1, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(179, 96)
}

//Middle - MAIL-L2 panto
spriteset(spriteset_emu_Czech_Republic_CD_640_middlemail_L2, "gfx/EMU/Czech_Republic_CD_640.png") {
	template_2cc_engines_general(179, 64)
}

//Graphics for the head wagon based on cargo class
switch(FEAT_TRAINS, SELF, switch_emu_Czech_Republic_CD_640_front_head_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): spriteset_emu_Czech_Republic_CD_640_front_pass;
	spriteset_emu_Czech_Republic_CD_640_front_mail;
}
switch(FEAT_TRAINS, SELF, switch_emu_Czech_Republic_CD_640_back_head_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): spriteset_emu_Czech_Republic_CD_640_back_pass;
	spriteset_emu_Czech_Republic_CD_640_back_mail;
}

//Dualheaded engines
switch(FEAT_TRAINS, SELF, switch_emu_Czech_Republic_CD_640_reversed, var[0xC8]) {
	0xFE: switch_emu_Czech_Republic_CD_640_back_head_cargo_selection;
    0xFF: switch_emu_Czech_Republic_CD_640_back_head_cargo_selection; 
    switch_emu_Czech_Republic_CD_640_front_head_cargo_selection;
}



//Visual effect, for EMU this is done on the part with the pantograph
switch(FEAT_TRAINS, SELF, switch_emu_Czech_Republic_CD_640_visual_effect_and_powered, var[0xC8]) {
	0xFE: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
	0xFF: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);

	visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_emu_Czech_Republic_CD_640_middlepass_livery, vehicle_type_id) {
	item_mu_wagon_powered: return spriteset_emu_Czech_Republic_CD_640_middlepass_L2;
	return spriteset_emu_Czech_Republic_CD_640_middlepass_L1;
}

switch(FEAT_TRAINS, SELF, switch_emu_Czech_Republic_CD_640_middlemail_livery, vehicle_type_id) {
	item_mu_wagon_powered: return spriteset_emu_Czech_Republic_CD_640_middlemail_L2;
	return spriteset_emu_Czech_Republic_CD_640_middlemail_L1;
}


/*
* Cargo capacity
*/

ENGINECAPACITYSWITCH(VEHIDCODE)

WAGONCAPACITYSWITCH(VEHIDCODE)

//Graphics for the unit wagon based on cargo class
switch(FEAT_TRAINS, SELF, switch_emu_Czech_Republic_CD_640_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): switch_emu_Czech_Republic_CD_640_middlepass_livery;
	switch_emu_Czech_Republic_CD_640_middlemail_livery;
}

//Add defined switches

RUNNINGCOSTENGINESWITCH

RUNNINGCOSTMUWAGONSWITCH

PURCHASETEXTSWITCH
