	TILETYPE_SNOW: track_overlays_DBHS_arctic;
	track_overlays_DBHS;
}

/**********************************************
 * Fences:
 **********************************************/
spriteset(fences_DBHS_snow, "gfx/Tracks/DBHS/fences.png") {
	tmpl_fences(50)
}
