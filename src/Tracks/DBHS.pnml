/**********************************************
 * Tracks in tunnels with backwall:
 **********************************************/

spriteset(tunnel_tracks_DBHS, "gfx/Tracks/DBHS/rails_overlays.png") {
	tmpl_tunnel_tracks()
}
spriteset(tunnel_tracks_DBHS_snow, "gfx/Tracks/DBHS/rails_overlays_snow.png") {
	tmpl_tunnel_tracks()
}

