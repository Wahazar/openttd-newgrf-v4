		//Add calls to defined switches below
		RUNNINGCOSTENGINESWITCHCALL
		PURCHASETEXTSWITCHCALL
		ADDITIONALTEXTSWITCHCALL
		CARGOSUBTYPESWITCHCALL
		LIVERYMAPPINGSWITCHCALL
		start_stop: switch_3_vehicles_start_stop;
