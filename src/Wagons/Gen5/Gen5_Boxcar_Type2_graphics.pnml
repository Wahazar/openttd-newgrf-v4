random_switch(FEAT_TRAINS, SELF, switch_wagon_Gen5_Boxcar_Type2_Goods_livery) {
	7: spritegroup_wagon_Gen5_Boxcar_Type2_Standard_livery;
	3: spritegroup_wagon_Gen5_Boxcar_Type2_Armoured_livery;
}

switch(FEAT_TRAINS, SELF, switch_wagon_Gen5_Boxcar_Type2_cargo_selection, cargo_type_in_veh) {
	LVST: return spritegroup_wagon_Gen5_Boxcar_Type2_Livestock_livery;
	GOOD: return switch_wagon_Gen5_Boxcar_Type2_Goods_livery;
	VALU: return spritegroup_wagon_Gen5_Boxcar_Type2_Armoured_livery;
	FOOD: return spritegroup_wagon_Gen5_Boxcar_Type2_Reefer_livery;
	GOLD: return spritegroup_wagon_Gen5_Boxcar_Type2_Armoured_livery;
	FRUT: return spritegroup_wagon_Gen5_Boxcar_Type2_Reefer_livery;
	DIAM: return spritegroup_wagon_Gen5_Boxcar_Type2_Armoured_livery;
	FZDR: return spritegroup_wagon_Gen5_Boxcar_Type2_Reefer_livery;
	BEER: return spritegroup_wagon_Gen5_Boxcar_Type2_Reefer_livery;
	FISH: return spritegroup_wagon_Gen5_Boxcar_Type2_Reefer_livery;
	return spritegroup_wagon_Gen5_Boxcar_Type2_Standard_livery; //GRAI, PAPR, WHEA, MAIZ, SUGR, TOYS, BATT, BUBL, BDMT, BRCK, CERA, CERE, COPR,ENSP, FERT, FMSP, GLAS, JAVA, MNSP, OLSD, POTA, RCYC, SGBT, SGCN, SULP, VEHI, WOOL
